

<div class="page-title bg-green text-white">
  <div class="container mb-2">
    <div class="d-flex justify-content-between">
        <%= link_to (image_tag "arrow_left.svg", alt: "back button"), :back %>
        <%#= link_to :back do %>
          <!-- <h2><i class="fas fa-chevron-left text-white"></i></h2> -->
        <%# end %>
      <h2 class="mx-auton align-self-center">Login</h2>
      <div class="text-center align-self-center">
        <%= link_to (image_tag "bell-53-green.svg", alt: "alttext")%>
      </div>
      <!-- <h2><i class="far fa-bell text-green"></i></h2> -->
    </div>
  </div>
</div>

<div class="container">
  <p class="text-center my-5">Welcome back!</p>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.error :email %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "bib-form-styling text-input"},
                  placeholder: "E-mail",
                  label: false%>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "bib-form-styling text-input" },
                  placeholder: "Password",
                  label: false %>
      <%#= f.input :remember_me,
                  label_html: {class: "text-input"},
                  as: :boolean if devise_mapping.rememberable?%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Login", class: "btn btn-bib btn-green btn-form" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
   <%= render "devise/shared/links" %>
  </div>
  <%= render "shared/menu" %>
</div>
