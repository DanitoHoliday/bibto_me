
<div class="page-title">
  <div class="container">
    <h2 class="text-center">Forgot your password?</h2>
    <%= link_to (image_tag "return.png", alt: "alttext", class: "btn-go-back"), :back %>
  </div>
</div>


<div class="container">

  <p>Please enter your e-mail and we will send you instructions on how to reset your password </p>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email",class: "bib-form-styling" },
                  placeholder: "E-mail",
                  label: false %>
    </div>

    <div class="form-actions btn-form">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn-bib btn-grey btn-form" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
