<div class="page-title">
  <div class="container mb-2">
    <div class="d-flex">
      <%= link_to :back do %>
          <h2><i class="fas fa-chevron-left text-white"></i></h2>
      <% end %>
      <h2 class="mx-auto">Return Item</h2>
      <h2><i class="far fa-bell text-green"></i></h2>
    </div>
  </div>
</div>


<div class="container text-center">

  <p>Please enter your e-mail <br> and we will send you instructions on how to <br> reset your password </p>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email",class: "bib-form-styling" },
                  placeholder: "E-mail",
                  label: false %>
    </div>

    <div class="form-actions btn-form">
      <%= f.button :submit, "Send!", class: "btn btn-bib btn-grey btn-form" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
<%= render "shared/menu" %>
