<div class="container">

  <h1>Good to see you!</h1>

  <h2>To register your tag, please enter your code below</h2>

   <%= form_tag update_registration_path, method: :post do %>
    <%= text_field_tag :code,
      params[:code],
      class: "form-control bib-form-styling mb-3 py-4",
      placeholder: "Enter your code"
    %>
    <%= submit_tag "Register now", class: "btn btn-bib btn-green w-100" %>
  <% end %>

</div>
