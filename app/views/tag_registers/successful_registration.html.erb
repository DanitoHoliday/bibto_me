
<div class="container">

 <div class="text-center mb-3">
   <%= image_tag "icon_checked_green.svg", alt: "alttext"%>
  </div>
  <h4 class="text-center mb-3"><strong>Your code <span style="color: $c1;"><%= @tag.code %></span><br>was successfully registered</strong></h4>
  <h4 class="text-center">Where will you put it?</h4>
  <br>

  <div class="category-grid">


      <div class="category-card">
        <i class="fas fa-laptop"></i>
        <%= form_tag update_register_category_path, method: :patch do %>
        <%= hidden_field_tag :category, "Laptop" %>
        <%= hidden_field_tag :code, @tag.code %>
        <%= submit_tag "Laptop", class: "btn" %>
        <% end %>
      </div>

      <div class="category-card">
        <i class="fas fa-mobile-alt"></i>
        <%= form_tag update_register_category_path, method: :patch do %>
        <%= hidden_field_tag :category, "Phone" %>
        <%= hidden_field_tag :code, @tag.code %>
        <%= submit_tag "Phone", class: "btn" %>
        <% end %>
      </div>

      <div class="category-card">
        <i class="fas fa-key"></i>
        <%= form_tag update_register_category_path, method: :patch do %>
        <%= hidden_field_tag :category, "Keys" %>
        <%= hidden_field_tag :code, @tag.code %>
        <%= submit_tag "Keys", class: "btn" %>
        <% end %>
      </div>

      <div class="category-card">
        <i class="fas fa-shopping-bag"></i>
        <%= form_tag update_register_category_path, method: :patch do %>
        <%= hidden_field_tag :category, "Bag" %>
        <%= hidden_field_tag :code, @tag.code %>
        <%= submit_tag "Bag", class: "btn" %>
        <% end %>
      </div>
  </div>

  <br>

  <div class="text-center">
    <div class="d-inline">

    <div class="custom-control custom-switch">
      <input type="checkbox" class="custom-control-input" id="customSwitch1">
      <label class="custom-control-label" for="customSwitch1">Turn on direct call</label>
    </div>

      <% if current_user.shared_phone == true %>
        <strong class="mr-2">Allow finders direct call: </strong><i class="far fa-check-circle" style="color: #008767;"></i>
        <br>
        <%=current_user.phone%>
      <% else %>
        <strong class="mr-2">Allow finders direct call:</strong><i class="far fa-times-circle" style="color: red;"></i>
      <% end %>
    </div>
    <br>
    <%= link_to "Change your data", edit_user_registration_path, :class => "ml-0", style: "font-size: 14px;" %>
    <div>
      <%= link_to "Register another tag", register_input_path, :class => "btn btn-bib btn-green btn-form my-2", style: "font-weight: 100;" %>
      <!-- replace user path by correct (future) path to user dashboard -->
      <%= link_to "Visit your dashboard", dashboard_path, :class => "btn btn-bib btn-grey btn-form my-2", style: "font-weight: 100;" %>
    </div>

  </div>
</div>

<%= render "shared/menu" %>





