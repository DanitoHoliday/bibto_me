  <body>

<div class="container">

 <div class="text-center mb-3 mt-5">
   <%= image_tag "icon_checked_green.svg", alt: "alttext"%>
  </div>
  <h4 class="text-center mb-3 mt-1"><strong>Your code <span style="color: $c1;"><%= @tag.code %></span><br>was successfully registered</strong></h4>
  <h4 class="text-center" style="margin-top: 20px;">Which item you want to secure?</h4>
  <div class="category-grid mt-5">


      <div class="category-card">
        <i class="fas fa-laptop"></i>
        <%= form_tag update_register_category_path, method: :patch do %>
        <%= hidden_field_tag :category, "Laptop" %>
        <%= hidden_field_tag :code, @tag.code %>
        <%= submit_tag "Laptop", class: "btn" %>
        <% end %>
      </div>

      <div class="category-card">
        <i class="fas fa-mobile-alt"></i>
        <%= form_tag update_register_category_path, method: :patch do %>
        <%= hidden_field_tag :category, "Phone" %>
        <%= hidden_field_tag :code, @tag.code %>
        <%= submit_tag "Phone", class: "btn" %>
        <% end %>
      </div>

      <div class="category-card">
        <i class="fas fa-key"></i>
        <%= form_tag update_register_category_path, method: :patch do %>
        <%= hidden_field_tag :category, "Keys" %>
        <%= hidden_field_tag :code, @tag.code %>
        <%= submit_tag "Keys", class: "btn" %>
        <% end %>
      </div>

      <div class="category-card">
        <i class="fas fa-shopping-bag"></i>
        <%= form_tag update_register_category_path, method: :patch do %>
        <%= hidden_field_tag :category, "Bag" %>
        <%= hidden_field_tag :code, @tag.code %>
        <%= submit_tag "Bag", class: "btn" %>
        <% end %>
      </div>
  </div>

  <div class="text-center mt-4">
    <div class="d-inline">

 <!--    <div class="custom-control custom-switch">
      <input type="checkbox" class="custom-control-input" id="customSwitch1">

      <label class="custom-control-label" for="customSwitch1">Turn on direct call</label>
    </div> -->

      <% if current_user.shared_phone == true %>
        <div class="align-center justify-content-center align-items-center">
        <h4 class="">Finders can see your <br> phone number:
        <i class="far fa-check-circle" style="color: #008767; font-size: 25px; margin-left: 8px;"></i></h4>
        </div>
        <%=current_user.phone%>
      <% else %>
      <div class="d-flex align-center justify-content-center align-items-center">
        <h4 class="mr-2">Finders can't see your <br> phone number:<i class="far fa-times-circle" style="color: red; font-size: 25px; margin-left: 8px;"></i></h4>
      </div>
      <% end %>
    </div>
    <br>
    <%= link_to "Want to change this setting?", edit_user_registration_path, style: "font-size: 14px;" %>
    <div>
      <%= link_to "Register another tag", register_input_path, :class => "btn btn-bib btn-green btn-form mt-4", style: "font-weight: 100; width: 80%; height: 50px;" %>
      <!-- replace user path by correct (future) path to user dashboard -->
      <%= link_to "Visit your dashboard", dashboard_path, :class => "btn btn-bib btn-grey btn-form my-2", style: "font-weight: 100; width: 80%; height: 50px;" %>
    </div>

  </div>
</div>

<%= render "shared/menu" %>

