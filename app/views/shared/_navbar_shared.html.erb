<nav class="shared-navbar">
  <div class="container larger-devices d-flex justify-content-between align-items-center">
      <%= link_to root_path do %>
        <%= image_tag("logo-blue.png", alt: "Bibtome Logo", class: "logo logo-blue")%>
      <% end %>
      <ul class="navbar">
        <li><%= link_to "Tag registrieren", register_input_path, class: "btn" %></li>
        <li><%= link_to "Zurückgeben", finder_input_path, class: "btn" %></li>
        <li><%= link_to "Über uns", root_path, class: "btn text-primary" %></li>
        <li><%= link_to "Team", root_path, class: "btn text-primary" %></li>
        <li><%= link_to "Kontakt", root_path, class: "btn text-primary" %></li>
        <% if user_signed_in? %>
          <div class="btn-group">
            <div class="user-avatar small " >
              <h4><%= current_user.first_name[0] unless current_user.first_name.nil? %></h4>
            </div>
          </div>
          <i class="fas fa-ellipsis-v dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <%= render "shared/dropdown" %>
        <% else %>
          <li><%= link_to "Registrieren", new_user_registration_path, class: "btn btn-primary" %></li>
        <% end %>
      </ul>
    </div>
    <!-- Display only in xs-devices -->
    <div class="container xs-devices">
      <div class="d-flex justify-content-between">
          <%= link_to :back do %>
            <h2><i class="fas fa-chevron-left text-white"></i></h2>
          <% end %>
        <h2 class="mx-auton text-white">Anmelden</h2>
        <h2><i class="far fa-bell text-primary"></i></h2>
      </div>
    </div>
</nav>

